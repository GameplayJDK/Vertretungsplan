<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_image_height"
        android:padding="@dimen/dialog_image_padding"
        android:scaleType="centerInside"
        android:background="@color/colorPrimary"
        android:src="@drawable/vpl_icon"
        android:contentDescription="@string/dialog_image" />

    <TextView
        android:id="@+id/app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_child_padding"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_primary_text_size"
        android:text="@string/dialog_app" />

    <TextView
        android:id="@+id/app_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_child_padding"
        android:textAlignment="center"
        android:textSize="@dimen/dialog_secondary_text_size"
        android:text="@string/dialog_text" />

</LinearLayout>